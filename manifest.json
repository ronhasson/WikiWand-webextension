{

  "manifest_version": 2,
  "name": "WikiWand webextension",
  "version": "0.3",
  "author": "Ron Hasson",
  "description": "A ported version of wikiwand to webextension - experimental",

  "icons": {
    "256": "icons/icon.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.wikipedia.org/*"
  ],

  "background": {
    "scripts": ["wikiwand.js"]
  },

  "browser_action": {
    "browser_style": false,
    "default_icon": {
      "256": "icons/icon.png"
    },
    "default_title": "Enable / Disable WikiWand"
  },

  "content_scripts": [
    {
      "matches": ["*://*.wikiwand.com/*"],
      "js": ["contentScript.js"]
    }
  ]


}
